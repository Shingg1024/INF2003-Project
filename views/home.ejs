<%- include('include/_header') %>
<%- include('include/_nav') %>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Platform Name</title>
  <style>
    body {
      background-image: url('assets/images/japan-landscape.jpg');
      background-size: cover;
      background-position: center;
      height: 100%;
      min-height: 100vh;
      margin: 0;
      font-family: 'Arial', sans-serif;
      color: #fff;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
      padding: 50px;
    }

    h1 {
      font-size: 3em;
      margin-bottom: 20px;
    }

    p {
      font-size: 1.2em;
      margin-bottom: 30px;
    }

    .search-bar {
      width: 100%;
      padding: 10px;
      font-size: 1em;
    }

    .cta-button {
      display: inline-block;
      padding: 15px 30px;
      font-size: 1.2em;
      background-color: #fbb234;
      color: #333;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
      margin-top: 20px;
    }

    .cta-button:hover {
      background-color: #333;
      color: #fbb234;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Welcome to XXXXX XXXX</h1>
    <p>Discover and explore the best restaurants and hostels in town.</p>

    <!-- Hero Section with Search Bar -->
<input type="text" class="search-bar" placeholder="Search for restaurants or hostels..." style="color: #333;">

    <!-- Features/Services Section -->
    <h2>Discover Amazing Places</h2>
    <p>Explore a variety of restaurants and hostels, from cozy cafes to comfortable accommodations.</p>

    <!-- Call-to-Action Button -->
    <a href="/restaurants" class="cta-button">Explore Restaurants</a>
    <a href="/hostels" class="cta-button">Explore Hostels</a>
  </div>
</body>

</html>
