<%- include('include/_header') %>
<style>
  body {
    background-image: url('assets/images/japan-landscape.jpg');
    background-size: cover;
    background-position: center;
    height: 100%;
    min-height: 100vh;
    margin: 0;
    font-family: 'Arial', sans-serif;
    color: #fff;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    padding: 50px;
  }

  h1 {
    font-size: 3em;
    margin-bottom: 20px;
  }

  p {
    font-size: 1.2em;
    margin-bottom: 30px;
  }

  .search-bar {
    width: 100%;
    padding: 10px;
    font-size: 1em;
  }

  .cta-button {
    display: inline-block;
    padding: 15px 30px;
    font-size: 1.2em;
    background-color: #fbb234;
    color: #333;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    margin-top: 20px;
  }

  .cta-button:hover {
    background-color: #333;
    color: #fbb234;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }

  footer {
    padding: 10px;
    color: #fff;
    text-align: center;
    background-color: rgb(16, 15, 15);
    backdrop-filter: blur(10px);
    margin-top: auto;
    /* Push the footer to the bottom */
  }
</style>
<%- include('include/_nav') %>

<div class="container">
  <h1>Welcome to KyotoKozyKuisine</h1>
  <p>Discover and explore the best restaurants and hostels in town.</p>

  <!-- Hero Section with Search Bar -->
  <form action="/search" method="get">
    <input type="text" name="searchTerm" class="search-bar" placeholder="Search for restaurants or hostels..." style="color: #333;">
    <button type="submit" style="color: black;">Search</button>
  </form>

  <!-- Features/Services Section -->
  <h2>Discover Amazing Places</h2>
  <p>Explore a variety of restaurants and hostels, from delightful cafes to cozy accommodations.</p>

  <!-- Call-to-Action Button -->
  <a href="/restaurants" class="cta-button">Explore Restaurants</a>
  <a href="/hostels" class="cta-button">Explore Hostels</a>
</div>

<script>
  // Example using the fetch API
  fetch('/user/alluser')
    .then(response => {
      if (!response.ok) {
        throw new Error('Network response was not ok');
      }
      return response.json();
    })
    .catch(error => {
      // Handle the error and show an alert to the user
      if (error instanceof Error) {
        // Check if it's a network error or a response error (e.g., 500)
        if (error.message === 'Network response was not ok') {
          alert('An internal server error occurred. Please restart the application.');
        }
      }
    });
</script>

<!-- include footer -->
<%- include('include/_footer')%>
<!-- include footer -->