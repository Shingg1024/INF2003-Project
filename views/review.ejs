<!DOCTYPE html>
<html lang="en">
  <!-- Your existing content -->
  <%- include('include/_header') %>

  <%- include('include/_nav') %>
<head>
  <!-- Add your other head elements here -->
  <style>
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
      background: linear-gradient(to bottom, #f0f0f0, #d8d8d8);
    }

    main {
      flex: 1;
    }

    footer {
      padding: 15px;
      color: #fff;
      text-align: center;
      background-color: rgb(16, 15, 15);
      backdrop-filter: blur(5px);
      margin-top: auto;
    }

    .container h2 {
      font-family: Georgia, 'Times New Roman', Times, serif;
      font-size: 310%;
    }

    table {
      margin-top: 20px;
      width: 80%;
      border-collapse: collapse;
      margin-bottom: 15px;
      background-color: #fff;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #333;
      color: #fff;
    }

    tbody tr:hover {
      background-color: #f5f5f5;
    }
  </style>
  <script>
    // JavaScript function to format date
    function formatDate(dateString) {
      const date = new Date(dateString);
      return date.toLocaleDateString('en-US');
    }
  </script>
</head>

<body>


  <br><br>
  <div class="container mt-4">
    <h2 class="text-center mb-4">Reviews</h2>

    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Hostel/Restaurant ID</th>
          <th scope="col">Comment</th>
          <th scope="col">Rating</th>
        </tr>
      </thead>
      <tbody>
        <% data.hostels.forEach(item => {%>
        <tr>
          <td>
            <a href="/indivHostel/<%= item.hostel_id - 1 %>">#<%= item.hostel_id %></a>
          </td>
          <td><%= item.review_comment %></td>
          <td><%= item.review_rating %></td>
        </tr>
        <% }); %>
        <% data.restaurants.forEach(item => { %>
        <tr>
          <td>
            <a href="/indivRestaurant/<%= item.restaurant_id %>">#<%= item.restaurant_id %></a>
          </td>
          <td><%= item.review_comment %></td>
          <td><%= item.review_rating %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <footer>
    <p>&copy; 2023 Your Company. All rights reserved.</p>
  </footer>

</body>

</html>
